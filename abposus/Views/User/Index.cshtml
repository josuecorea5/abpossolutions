@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "User Page";
}
<div class="px-2">
    <h2>Products</h2>
    <div class="text-end">
        <a asp-controller="User" asp-action="Create" class="bg-success d-inline-block text-white px-5 py-2 border-0 rounded me-3 text-decoration-none">
            Add
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Type</th>
                <th scope="col">Mail</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row">@user.Id</th>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>
                        <span class="d-inline-block rounded bg-primary bg-gradient text-white px-2" style="font-size: 12px">
                            @user.Type
                        </span>
                    </td>
                    <td>@user.Email</td>
                    <td>
                        <div class="d-flex gap-3">
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id"
                               class="d-inline-block bg-warning text-white px-2 py-1 border-0 rounded w-25 text-center
                                text-decoration-none">
                                Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@user.Id"
                               class="d-inline-block bg-danger text-white px-2 py-1 border-0 rounded w-25 text-center
                               text-decoration-none">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>