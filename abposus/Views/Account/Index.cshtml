@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "User Page";
}
<div class="px-2">
    <h2>Products</h2>
    <div class="text-end">
        <a asp-controller="Account" asp-action="Create" class="bg-success d-inline-block text-white px-5 py-2 border-0 rounded me-3 text-decoration-none">
            Add
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Type</th>
                <th scope="col">Mail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row">@user.Id</th>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>
                        <span class="d-inline-block rounded bg-primary bg-gradient text-white px-2" style="font-size: 12px">
                            @user.Type
                        </span>
                    </td>
                    <td>@user.Email</td>
                </tr>
            }
        </tbody>
    </table>
</div>